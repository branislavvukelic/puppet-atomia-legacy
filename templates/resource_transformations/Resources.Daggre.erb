<resourceDescription xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <bindings xdt:Locator="XPath(//bindings[moduleList/module/@name='Atomia.Provisioning.Modules.Daggre.Daggre'])">
    <resourceList>
      <resource name="Daggre" xdt:Transform="Insert">
        <property name="DaggreHosts"><%= IO.popen("#{@lookup_var} daggre ip_addr #{@hierapath} #{@modulepath}").read.gsub(/\n/,'').gsub(/\r/,'') %>:999</property>
        <property name="DaggreAuthToken"><%= IO.popen("#{@lookup_var} daggre global_auth_token #{@hierapath} #{@modulepath}").read.gsub(/\n/,'').gsub(/\r/,'') %></property>
      </resource>
    </resourceList>
  </bindings>
</resourceDescription>
