<resourceDescription xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <bindings xdt:Locator="XPath(//bindings[moduleList/module/@name='Atomia.Provisioning.Modules.IIS.IIS7'])">
    <resourceList>
      <resource name="IISServerCluster" xdt:Transform="Insert">
        <property name="IPAddress"><%= IO.popen("#{@lookup_var} iis iis_master_ip #{@hierapath} #{@modulepath}").read.gsub(/\n/,'').gsub(/\r/,'') %></property>
        <property name="ClusterIpAddress"><%= IO.popen("#{@lookup_var} iis iis_cluster_ip #{@hierapath} #{@modulepath}").read.gsub(/\n/,'').gsub(/\r/,'') %></property>
        <property name="DefaultResource.Default">true</property>
      </resource>
    </resourceList>
  </bindings>
</resourceDescription>

